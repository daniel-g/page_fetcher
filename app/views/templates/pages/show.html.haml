.row
  .large-2.columns
    %img(ng-src='//graph.facebook.com/{{ page.uid }}/picture?type=square&width=200')
  .large-10.columns
    %h1(ng-bind='page.username')
.row
  .large-12.columns
    .row(ng-repeat='post in page.feed')
      .large-6.large-offset-2.columns
        .row
          .large-12.columns
            %h3 Jean Durant
        .row(ng-if='post.message')
          .large-12.columns
            %p(ng-bind='post.message')
        .row(ng-if='post.description')
          .large-3.columns
            %img(ng-src='{{ post.picture }}')
          .large-9.columns
            %p(ng-bind='post.description')
        .row
          .large-12.columns
            %p(ng-bind='post.created_time | fromNow')
